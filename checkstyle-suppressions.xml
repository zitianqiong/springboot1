<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
  "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
  "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <suppress checks="HideUtilityClassConstructor" files=".*Application"/>
    <!-- suppression for spring boot configurations -->
    <suppress checks="JavadocMethod" files=".*Config\.java$|DateUtil" />
    <suppress checks="JavadocType" files=".*Config\.java$" />
    <suppress checks="Javadoc*" files=".*Mapper\.java$"/>
    <suppress checks="LocalVariableName" files="FileController|QRCodeController"/>
    <suppress checks="MagicNumber" files=".*Config\.java$|.*Util\.java$|.*Controller\.java$|CustomerServiceImpl"/>
    <suppress checks="MemberName" files="CustomerController|DateUtil"/>
    <suppress checks="ConstantName" files="DateUtil"/>

</suppressions>
